<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCD4"
    tools:context=".MainActivity2">

    <EditText
        android:id="@+id/TxtWheather"
        android:layout_width="154dp"
        android:layout_height="36dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="235dp"
        tools:layout_editor_absoluteY="500dp" />

    <EditText
        android:id="@+id/TxtMax"
        android:layout_width="214dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="445dp" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="116dp"
        android:layout_height="65dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="248dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:text="Clear"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/btnPre"
        app:layout_constraintTop_toBottomOf="@+id/TxtDay" />

    <Button
        android:id="@+id/btnNex"
        android:layout_width="116dp"
        android:layout_height="65dp"
        android:layout_marginStart="276dp"
        android:layout_marginTop="248dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:text="Next"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TxtDay" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="58dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="65dp"
        android:layout_height="35dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="75dp"
        android:text="Day:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/TxtDay"
        android:layout_width="209dp"
        android:layout_height="44dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/btnPre"
        android:layout_width="116dp"
        android:layout_height="65dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="252dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:text="Previous"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="69dp"
        android:layout_height="37dp"
        android:text="Min:"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="380dp" />

    <EditText
        android:id="@+id/TxtMin"
        android:layout_width="214dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="376dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="69dp"
        android:layout_height="31dp"
        android:text="Max:"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="445dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="195dp"
        android:layout_height="34dp"
        android:text="wheather conditions:"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="502dp" />

</androidx.constraintlayout.widget.ConstraintLayout>